<!--- <form action='/users' method='post' accept-charset='UTF-8'>
  <label for='user[username]'>Username:</label><br>
  <input type='text' id='user[username]' name='user[username]' value='Username'><br>

  <label for='user[email]'>Email:</label><br>
  <input type='email' id='user[email]' name='user[email]' value='email@example.com'><br>

  <label for='user[password]'>Password:</label><br>
  <input type='password' id='user[password]' name='user[password]' value='password'><br>

  <input type='hidden' name='authenticity_token' value="<%= form_authenticity_token %>">

  <input type='submit' value='Create'>
</form>

<%= form_tag('/users', method: 'post') do %>
  <%= label_tag :username, 'Username' %>
  <%= text_field_tag :username %>

  <%= label_tag :email, 'Email' %>
  <%= text_field_tag :email %>

  <%= label_tag :password, 'Password' %>
  <%= password_field_tag :password %>

  <%= submit_tag 'Create' %>
<% end %> --->

<% if @user.errors.any? %>
  <div id="error-display">
    <h2><%= pluralize(@user.errors.size, 'error') %> detected and prevented this user from being saved</h2>
    <ul>
      <% @user.errors.each do |err| %>
        <li><%= err.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user do |form| %>
  <%= form.label :username, 'Username:' %><br>
  <%= form.text_field :username, placeholder: 'username' %><br>

  <%= form.label :email, 'Email:' %><br>
  <%= form.email_field :email, placeholder: 'example@email.com' %><br>

  <%= form.label :username, 'Password:' %><br>
  <%= form.password_field :password, placeholder: 'password' %><br>

  <%= form.submit 'Create' %>
<% end %>