<% if @user.errors.any? %>
  <div id="error-display">
    <h2><%= pluralize(@user.errors.size, 'error') %> detected and prevented this user from being saved</h2>
    <ul>
      <% @user.errors.each do |err| %>
        <li><%= err.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user do |form| %>
  <%= form.label :username, 'Username:' %><br>
  <%= form.text_field :username, placeholder: 'username' %><br>

  <%= form.label :email, 'Email:' %><br>
  <%= form.email_field :email, placeholder: 'example@email.com' %><br>

  <%= form.label :username, 'Password:' %><br>
  <%= form.password_field :password, placeholder: 'password' %><br>

  <%= form.submit 'Update' %>
<% end %>